{
  "name": "docqa_query",
  "type": "serial",
  "input": {
    "schema": {
      "input": {
        "type": "object",
        "required": [
          "query"
        ],
        "properties": {
          "query": {
            "type": "string",
            "description": "The user's query"
          }
        }
      },
      "output": {
        "type": "object",
        "properties": {
          "response": {
            "type": "string",
            "description": "The response message"
          }
        }
      }
    },
    "tasks": [
      {
        "name": "calculate_embedding",
        "type": "call",
        "input": {
          "loader": "llmflow",
          "task": "embedding",
          "input": {
            "model": "rocketqa-query",
            "uri": "http://127.0.0.1:8088/embeddings",
            "api_key": "123",
            "texts": [
              "${input.query}"
            ]
          }
        }
      },
      {
        "name": "query_documents",
        "type": "call",
        "input": {
          "loader": "llmflow",
          "task": "vectorstore_query",
          "input": {
            "vendor": "memory",
            "uri": "http://127.0.0.1:8088/vector/query",
            "api_key": "123",
            "vector": "${calculate_embedding.embeddings[0]}",
            "top_k": 3,
            "min_score": 0.7
          }
        }
      },
      {
        "name": "similar_documents",
        "type": "decision",
        "input": {
          "expression": "#{string(len(query_documents.similarities))}",
          "cases": {
            "0": {
              "type": "terminate",
              "name": "sorry",
              "input": {
                "output": {
                  "response": "对不起，我不知道"
                }
              }
            }
          },
          "default": {
            "name": "switch",
            "type": "serial",
            "input": {
              "tasks": [
                {
                  "name": "build_prompt",
                  "type": "template",
                  "input": {
                    "template": "Answer the question using the provided context.\n            \nContext:\n{{- range $.documents}}\n* {{.text}}\n{{- end}}\n\nQ:{{$.query}}\nA:",
                    "args": {
                      "query": "${input.query}",
                      "documents": "${query_documents.similarities}"
                    }
                  }
                },
                {
                  "name": "ask_llm",
                  "type": "call",
                  "input": {
                    "loader": "llmflow",
                    "task": "llm",
                    "input": {
                      "model": "chatglm",
                      "uri": "http://127.0.0.1:8088/chat/completions",
                      "api_key": "123",
                      "prompt": "${build_prompt.result}",
                      "temperature": 0
                    }
                  }
                }
              ]
            }
          }
        }
      }
    ]
  }
}
