{
  "name": "embedding_openai",
  "type": "serial",
  "description": "Calculate embeddings for given texts",
  "input": {
    "schema": {
      "input": {
        "type": "object",
        "required": [
          "model",
          "uri",
          "api_key",
          "texts"
        ],
        "properties": {
          "model": {
            "type": "string",
            "description": "ID of the model to use.",
            "default": "text-embedding-ada-002"
          },
          "uri": {
            "type": "string",
            "description": "The model endpoint.",
            "default": "https://api.openai.com/v1/embeddings"
          },
          "api_key": {
            "type": "string",
            "description": "The API key for authentication.",
            "default": "${getenv(\"OPENAI_API_KEY\")}"
          },
          "texts": {
            "type": "array",
            "items": {
              "type": "string",
              "description": "The texts to embed."
            }
          }
        }
      },
      "output": {
        "type": "object",
        "properties": {
          "embeddings": {
            "type": "array",
            "items": {
              "type": "array",
              "items": {
                "type": "number",
                "description": "The embedding item"
              }
            }
          }
        }
      }
    },
    "tasks": [
      {
        "name": "embed",
        "type": "http",
        "input": {
          "body": {
            "model": "${input.model or \"text-embedding-ada-002\"}",
            "input": "${input.texts}"
          },
          "header": {
            "Authorization": [
              "${\"Bearer \" + (input.api_key or getenv(\"OPENAI_API_KEY\"))}"
            ]
          },
          "method": "POST",
          "uri": "${input.uri or \"https://api.openai.com/v1/embeddings\"}"
        }
      },
      {
        "name": "status",
        "type": "decision",
        "input": {
          "expression": "${str(embed.status)}",
          "cases": {
            "200": {
              "name": "success",
              "type": "terminate",
              "input": {
                "output": {
                  "embeddings": "${[d.embedding for d in embed.body.data]}"
                }
              }
            }
          },
          "default": {
            "name": "failure",
            "type": "terminate",
            "input": {
              "error": "${embed.body.error.message}"
            }
          }
        }
      }
    ]
  }
}