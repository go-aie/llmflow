{
  "name": "embedding",
  "type": "serial",
  "description": "Calculate embeddings for given texts",
  "schema": {
    "input": {
      "type": "object",
      "properties": {
        "model": {
          "type": "string",
          "description": "The model name"
        },
        "uri": {
          "type": "string",
          "description": "The model endpoint"
        },
        "api_key": {
          "type": "string",
          "description": "The API key"
        },
        "texts": {
          "type": "array",
          "items": {
            "type": "string",
            "description": "The text to embed"
          }
        }
      },
      "required": [
        "model",
        "uri",
        "api_key",
        "texts"
      ]
    },
    "output": {
      "type": "object",
      "properties": {
        "embeddings": {
          "type": "array",
          "items": {
            "type": "array",
            "items": {
              "type": "number",
              "description": "The embedding item"
            }
          }
        },
        "error": {
          "type": "string",
          "description": "The error message"
        }
      }
    }
  },
  "input": {
    "tasks": [
      {
        "name": "embed",
        "type": "http",
        "input": {
          "method": "POST",
          "uri": "${input.uri}",
          "header": {
            "Authorization": [
              "#{\"Bearer \" + input.api_key}"
            ],
            "Content-Type": [
              "application/json"
            ]
          },
          "body": {
            "model": "${input.model}",
            "input": "${input.texts}"
          }
        }
      },
      {
        "name": "status",
        "type": "decision",
        "input": {
          "switch": "#{string(embed.status)}",
          "cases": {
            "200": {
              "name": "success",
              "type": "terminate",
              "input": {
                "output": {
                  "embeddings": "${embed.body.data[*].embedding}"
                }
              }
            }
          },
          "default": {
            "name": "failure",
            "type": "terminate",
            "input": {
              "output": {
                "error": "${embed.body.error.message}"
              }
            }
          }
        }
      }
    ]
  }
}
