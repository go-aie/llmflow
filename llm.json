{
  "name": "llm",
  "type": "serial",
  "description": "Get a response from an LLM",
  "schema": {
    "input": {
      "type": "object",
      "properties": {
        "model": {
          "type": "string",
          "description": "The model name"
        },
        "uri": {
          "type": "string",
          "description": "The model endpoint"
        },
        "api_key": {
          "type": "string",
          "description": "The API key"
        },
        "temperature": {
          "type": "number",
          "description": "What sampling temperature to use, between 0 and 2"
        },
        "prompt": {
          "type": "string",
          "description": "The prompt to generate completions for"
        }
      },
      "required": [
        "model",
        "uri",
        "api_key",
        "prompt"
      ]
    },
    "output": {
      "type": "object",
      "properties": {
        "response": {
          "type": "string",
          "description": "The response message"
        },
        "error": {
          "type": "string",
          "description": "The error message"
        }
      }
    }
  },
  "input": {
    "tasks": [
      {
        "name": "chat",
        "type": "http",
        "input": {
          "method": "POST",
          "uri": "${input.uri}",
          "header": {
            "Authorization": [
              "#{\"Bearer \" + input.api_key}"
            ],
            "Content-Type": [
              "application/json"
            ]
          },
          "body": {
            "model": "${input.model}",
            "messages": [
              {
                "role": "user",
                "content": "${input.prompt}"
              }
            ],
            "temperature": "${input.temperature}"
          }
        }
      },
      {
        "name": "status",
        "type": "decision",
        "input": {
          "switch": "#{string(chat.status)}",
          "cases": {
            "200": {
              "name": "success",
              "type": "terminate",
              "input": {
                "output": {
                  "response": "${chat.body.choices[0].message.content}"
                }
              }
            }
          },
          "default": {
            "name": "failure",
            "type": "terminate",
            "input": {
              "output": {
                "error": "${chat.body.error.message}"
              }
            }
          }
        }
      }
    ]
  }
}
