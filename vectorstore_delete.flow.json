{
  "name": "vectorstore_delete",
  "type": "serial",
  "description": "Perform a DELETE action on a vector store",
  "input": {
    "schema": {
      "input": {
        "type": "object",
        "required": [
          "vendor",
          "uri",
          "api_key"
        ],
        "properties": {
          "vendor": {
            "type": "string",
            "description": "The vendor name"
          },
          "uri": {
            "type": "string",
            "description": "The endpoint of the vector store"
          },
          "api_key": {
            "type": "string",
            "description": "The API key"
          }
        }
      },
      "output": {
      }
    },
    "tasks": [
      {
        "name": "delete_documents",
        "type": "http",
        "input": {
          "method": "POST",
          "uri": "${input.uri}",
          "header": {
            "Authorization": [
              "#{\"Bearer \" + input.api_key}"
            ]
          },
          "body": {
            "vendor": "${input.vendor}"
          }
        }
      },
      {
        "name": "status",
        "type": "decision",
        "input": {
          "expression": "#{string(delete_documents.status)}",
          "cases": {
            "200": {
              "name": "success",
              "type": "terminate",
              "input": {
                "output": {
                }
              }
            }
          },
          "default": {
            "name": "failure",
            "type": "raise",
            "input": {
              "error": "${delete_documents.body.error.message}"
            }
          }
        }
      }
    ]
  }
}
