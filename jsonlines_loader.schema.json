{
  "input": {
    "type": "object",
    "required": [
      "filename",
      "pointer"
    ],
    "properties": {
      "id": {
        "type": "string",
        "description": "The document ID."
      },
      "filename": {
        "type": "string",
        "description": "The path to the file."
      },
      "pointer": {
        "type": "string",
        "description": "The JSON Pointer used to select the main text to embed."
      },
      "batch_size": {
        "type": "integer",
        "description": "The number of JSON lines to load in each batch."
      }
    }
  },
  "output": {
    "type": "object",
    "properties": {
      "documents": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "id": {
              "type": "string"
            },
            "text": {
              "type": "string"
            },
            "vector": {
              "type": "array",
              "items": {
                "type": "number",
                "description": "The vector item"
              }
            },
            "metadata": {
              "type": "object",
              "properties": {
                "source_id": {
                  "type": "string"
                }
              }
            },
            "extra": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
