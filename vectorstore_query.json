{
  "name": "vectorstore_query",
  "type": "serial",
  "description": "Perform a QUERY action on a vector store",
  "input": {
    "schema": {
      "input": {
        "type": "object",
        "required": [
          "vendor",
          "uri",
          "api_key",
          "vector",
          "top_k",
          "min_score"
        ],
        "properties": {
          "vendor": {
            "type": "string",
            "description": "The vendor name"
          },
          "uri": {
            "type": "string",
            "description": "The endpoint of the vector store"
          },
          "api_key": {
            "type": "string",
            "description": "The API key"
          },
          "vector": {
            "type": "array",
            "items": {
              "type": "number",
              "description": "The vector item"
            }
          },
          "top_k": {
            "type": "integer",
            "description": "The maximum number of documents to return"
          },
          "min_score": {
            "type": "number",
            "description": "Only return documents whose scores are greater than or equal to this score"
          }
        }
      },
      "output": {
        "type": "object",
        "properties": {
          "similarities": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string"
                },
                "text": {
                  "type": "string"
                },
                "vector": {
                  "type": "array",
                  "items": {
                    "type": "number",
                    "description": "The vector item"
                  }
                },
                "metadata": {
                  "type": "object",
                  "properties": {
                    "source_id": {
                      "type": "string"
                    }
                  }
                },
                "extra": {
                  "type": "string"
                },
                "score": {
                  "type": "number"
                }
              }
            }
          },
          "error": {
            "type": "string",
            "description": "The error message"
          }
        }
      }
    },
    "tasks": [
      {
        "name": "query_documents",
        "type": "http",
        "input": {
          "method": "POST",
          "uri": "${input.uri}",
          "header": {
            "Authorization": [
              "#{\"Bearer \" + input.api_key}"
            ],
            "Content-Type": [
              "application/json"
            ]
          },
          "body": {
            "vendor": "${input.vendor}",
            "vector": "${input.vector}",
            "top_k": "${input.top_k}",
            "min_score": "${input.min_score}"
          }
        }
      },
      {
        "name": "status",
        "type": "decision",
        "input": {
          "expression": "#{string(query_documents.status)}",
          "cases": {
            "200": {
              "name": "success",
              "type": "terminate",
              "input": {
                "output": {
                  "similarities": "${query_documents.body.similarities}",
                  "error": ""
                }
              }
            }
          },
          "default": {
            "name": "failure",
            "type": "terminate",
            "input": {
              "output": {
                "error": "${query_documents.body.error.message}"
              }
            }
          }
        }
      }
    ]
  }
}
