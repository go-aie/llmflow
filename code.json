{
  "name": "code",
  "type": "serial",
  "description": "Execute a snippet of code",
  "schema": {
    "input": {
      "type": "object",
      "properties": {
        "code": {
          "type": "string",
          "description": "The source code of the function"
        },
        "ctx": {
          "type": "object",
          "description": "The context variables",
          "patternProperties": {
            "^.*$": {}
          }
        }
      },
      "required": [
        "code",
        "ctx"
      ]
    },
    "output": {
      "type": "object",
      "description": "The execution result",
      "properties": {
        "result": {},
        "error": {
          "type": "string",
          "description": "The error message"
        }
      }
    }
  },
  "input": {
    "tasks": [
      {
        "name": "exec",
        "type": "http",
        "input": {
          "method": "POST",
          "uri": "#{getenv(\"CODE_API_ENDPOINT\")}",
          "header": {
            "Authorization": [
              "#{\"Bearer \" + getenv(\"CODE_API_KEY\")}"
            ],
            "Content-Type": [
              "application/json"
            ]
          },
          "body": {
            "func": "${input.code}",
            "ctx": "${input.ctx}"
          }
        }
      },
      {
        "name": "status",
        "type": "decision",
        "input": {
          "switch": "#{string(exec.status)}",
          "cases": {
            "200": {
              "name": "success",
              "type": "terminate",
              "input": {
                "output": {
                  "error": "",
                  "result": "${exec.body.result}"
                }
              }
            }
          },
          "default": {
            "name": "failure",
            "type": "terminate",
            "input": {
              "output": {
                "error": "${exec.body.error}"
              }
            }
          }
        }
      }
    ]
  }
}
