{
  "name": "code",
  "type": "serial",
  "description": "Execute a snippet of Python code",
  "input": {
    "schema": {
      "input": {
        "type": "object",
        "required": [
          "code",
          "ctx"
        ],
        "properties": {
          "code": {
            "type": "string",
            "description": "The source code of the function"
          },
          "ctx": {
            "type": "object",
            "description": "The context variables",
            "patternProperties": {
              "^.*$": {}
            }
          }
        }
      },
      "output": {
        "type": "object",
        "description": "The execution result",
        "properties": {
          "result": {}
        }
      }
    },
    "tasks": [
      {
        "name": "exec",
        "type": "http",
        "input": {
          "method": "POST",
          "uri": "#{getenv(\"CODE_API_ENDPOINT\")}",
          "header": {
            "Authorization": [
              "#{\"Bearer \" + getenv(\"CODE_API_KEY\")}"
            ],
            "Content-Type": [
              "application/json"
            ]
          },
          "body": {
            "func": "${input.code}",
            "ctx": "${input.ctx}"
          }
        }
      },
      {
        "name": "status",
        "type": "decision",
        "input": {
          "expression": "#{string(exec.status)}",
          "cases": {
            "200": {
              "name": "success",
              "type": "terminate",
              "input": {
                "output": {
                  "result": "${exec.body.result}"
                }
              }
            }
          },
          "default": {
            "name": "failure",
            "type": "raise",
            "input": {
              "error": "${exec.body.error}"
            }
          }
        }
      }
    ]
  }
}
