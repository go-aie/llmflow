{
  "name": "vectorstore_delete",
  "type": "serial",
  "description": "Perform a DELETE action on a vector store",
  "schema": {
    "input": {
      "type": "object",
      "properties": {
        "vendor": {
          "type": "string",
          "description": "The vendor name"
        },
        "uri": {
          "type": "string",
          "description": "The endpoint of the vector store"
        },
        "api_key": {
          "type": "string",
          "description": "The API key"
        }
      },
      "required": [
        "vendor",
        "uri",
        "api_key"
      ]
    },
    "output": {
      "type": "object",
      "properties": {
        "error": {
          "type": "string",
          "description": "The error message"
        }
      }
    }
  },
  "input": {
    "tasks": [
      {
        "name": "delete_documents",
        "type": "http",
        "input": {
          "method": "POST",
          "uri": "${input.uri}",
          "header": {
            "Authorization": [
              "#{\"Bearer \" + input.api_key}"
            ],
            "Content-Type": [
              "application/json"
            ]
          },
          "body": {
            "vendor": "${input.vendor}"
          }
        }
      },
      {
        "name": "status",
        "type": "decision",
        "input": {
          "expression": "#{string(delete_documents.status)}",
          "cases": {
            "200": {
              "name": "success",
              "type": "terminate",
              "input": {
                "output": {
                  "error": ""
                }
              }
            }
          },
          "default": {
            "name": "failure",
            "type": "terminate",
            "input": {
              "output": {
                "error": "${delete_documents.body.error.message}"
              }
            }
          }
        }
      }
    ]
  }
}
